{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Marker",
  "type": "object",
  "required": [
    "account_number",
    "address",
    "denom",
    "marker_type",
    "sequence",
    "status",
    "supply_fixed",
    "total_supply"
  ],
  "properties": {
    "account_number": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "address": {
      "$ref": "#/definitions/HumanAddr"
    },
    "coins": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/Coin"
      }
    },
    "denom": {
      "type": "string"
    },
    "manager": {
      "default": "",
      "allOf": [
        {
          "$ref": "#/definitions/HumanAddr"
        }
      ]
    },
    "marker_type": {
      "$ref": "#/definitions/MarkerType"
    },
    "permissions": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/AccessGrant"
      }
    },
    "sequence": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "status": {
      "$ref": "#/definitions/MarkerStatus"
    },
    "supply_fixed": {
      "type": "boolean"
    },
    "total_supply": {
      "$ref": "#/definitions/Decimal"
    }
  },
  "definitions": {
    "AccessGrant": {
      "type": "object",
      "required": [
        "address",
        "permissions"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "permissions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MarkerPermission"
          }
        }
      }
    },
    "Coin": {
      "type": "object",
      "required": [
        "amount",
        "denom"
      ],
      "properties": {
        "amount": {
          "$ref": "#/definitions/Uint128"
        },
        "denom": {
          "type": "string"
        }
      }
    },
    "Decimal": {
      "description": "A fixed-point decimal value with 18 fractional digits, i.e. Decimal(1_000_000_000_000_000_000) == 1.0\n\nThe greatest possible value that can be represented is 340282366920938463463.374607431768211455 (which is (2^128 - 1) / 10^18)",
      "type": "string"
    },
    "HumanAddr": {
      "type": "string"
    },
    "MarkerPermission": {
      "description": "Marker permission types.",
      "type": "string",
      "enum": [
        "access_admin",
        "access_burn",
        "access_deposit",
        "access_delete",
        "access_mint",
        "access_transfer",
        "access_unspecified",
        "access_withdraw"
      ]
    },
    "MarkerStatus": {
      "description": "Marker status types.",
      "type": "string",
      "enum": [
        "active",
        "cancelled",
        "destroyed",
        "finalized",
        "proposed",
        "unspecified"
      ]
    },
    "MarkerType": {
      "description": "Marker types.",
      "type": "string",
      "enum": [
        "coin",
        "restricted",
        "unspecified"
      ]
    },
    "Uint128": {
      "type": "string"
    }
  }
}
